<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<title>RoYalHuB Admin</title>
	<!--favicon-->
	<link rel="icon" href="/assets/images/favicon-32x32.png" type="image/png" />
	<!-- loader-->
	<link href="/assets/css/pace.min.css" rel="stylesheet" />
	<script src="/assets/js/pace.min.js"></script>
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&amp;family=Roboto&amp;display=swap" />
	<!-- Icons CSS -->
	<link rel="stylesheet" href="/assets/css/icons.css" />
	<!-- App CSS -->
	<link rel="stylesheet" href="/assets/css/app.css" />
</head>

<body class="bg-login">
	<div class="wrapper">
		<div class="section-authentication-login d-flex align-items-center justify-content-center">
			<div class="row">
				<form action="admin/login" id="logform" method="POST">
				<div class="col-12 col-lg-10 mx-auto mt-5">
					<div class="card radius-15">
						<div class="row no-gutters ">
							<div class="col-lg-6">
								<div class="card-body p-md-5" style="margin-top: 120px;">
									<div class="form-group mt-4" >
										<label>Email Address</label>
										<input type="text" class="form-control" style="color: black;" id="email" name="email" placeholder="Enter your email address" />
									</div>
									<div class="form-group">
										<label>Password</label>
										<input type="password" class="form-control" style="color: black;" id="password" name="password" placeholder="Enter your password" />
									</div>
									<div style="align-items: center;display:none" id="errMsg">
										<h6 class="text-center text-danger">Access Denined !!!<br>
										Unauthorized Access</h6>
									</div>
									
									<div class="btn-group mt-3 w-100">
										<button type="submit" class="btn btn-primary btn-block">Log In</button>
										
										</button>
									</div>
									<hr>
								</div>
							</div>
							<div class="col-lg-6">
								<img src="/assets/images/login-images/login-frent-img.jpg" class="card-img login-img h-100" alt="...">
							</div>
						</div>
						<!--end row-->
					</div>
				</div>
				</form>
			</div>
		</div>
	</div>
	<!-- end wrapper -->
</body>
 <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
<script>
    $('#logform').validate({
        rules: {
            email: {
                required: true,
                email: true
            }
        },
        submitHandler: function (logform) {
            $.ajax({
                url: logform.action,
                type: logform.method,
                data: $(logform).serialize(),
                success: (response) => {
					console.log("THE RES",response)
					if(response.status==1||response.status==0){
						$('#errMsg').show()
					}else{
						console.log("Adminil ethi")
						window.location.href="./admin"
					}
                }
            });
        }
    });
</script>
</html>